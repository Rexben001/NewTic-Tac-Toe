<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#43BFC7"
    tools:context="com.android.rexben.newtic_tac_toe.LauncherActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_new_ntic_tac_toe_ngame"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/the_new"
        android:textStyle="italic"
        android:textColor="#008080"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/play_game"
        android:onClick="playTicTacToe"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="29dp"
        android:background="#15317E"
        android:textColor="#43BFC7"
        android:layout_below="@id/the_new"/>
</RelativeLayout>